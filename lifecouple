<script>
function myFunction() {
//iPhone Version:
if((navigator.userAgent.match(/iPhone/i)) || (navigator.userAgent.match(/iPod/i))) {
    window.location = "https://apps.apple.com/us/app/lifecouple/id1402217992?ls=1";
}
//Android Version:
if(navigator.userAgent.match(/android/i)) {
    window.location = "https://play.google.com/store/apps/details?id=com.lifecouple.mobile1";
}

if(navigator.platform.indexOf('Mac') > -1){ window.location.href = 'itms-apps://?action=discover&referrer=app-store'; }
if(navigator.platform.indexOf('Win') > -1){ window.location.href = 'https://chrome.google.com/webstore/category/extensions'; }

}
</script>

